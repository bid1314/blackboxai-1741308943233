# WordPress
WP_DEBUG=true
WP_DEBUG_LOG=true
WP_DEBUG_DISPLAY=true
WP_ENVIRONMENT_TYPE=development

# Database
DB_NAME=wordpress
DB_USER=wordpress
DB_PASSWORD=wordpress
DB_HOST=db
DB_PREFIX=wp_

# API Keys
BREVO_API_KEY=your_brevo_api_key_here
REMOVE_BG_API_KEY=your_remove_bg_api_key_here
PRINTAVO_API_KEY=your_printavo_api_key_here
GOOGLE_FONTS_API_KEY=your_google_fonts_api_key_here

# SMTP Configuration
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USER=null
SMTP_PASS=null
SMTP_FROM_EMAIL=noreply@dallas-embroidery.com
SMTP_FROM_NAME="Dallas Embroidery"

# Supplier Integration
SUPPLIER_API_URL=https://api.supplier.com
SUPPLIER_API_KEY=your_supplier_api_key_here
SUPPLIER_SFTP_HOST=sftp.supplier.com
SUPPLIER_SFTP_USER=your_sftp_username
SUPPLIER_SFTP_PASS=your_sftp_password
SUPPLIER_SFTP_PORT=22

# Testing
TEST_DB_NAME=wordpress_test
TEST_DB_USER=wordpress
TEST_DB_PASS=wordpress
TEST_DB_HOST=db
TEST_TABLE_PREFIX=wptests_

# Development
NODE_ENV=development
WEBPACK_WATCH=true
WEBPACK_DEV_SERVER_PORT=3000

# Cache
CACHE_ENABLE=false
CACHE_PATH=/tmp/dallas-designer-cache

# Security
AUTH_KEY=your_auth_key_here
SECURE_AUTH_KEY=your_secure_auth_key_here
LOGGED_IN_KEY=your_logged_in_key_here
NONCE_KEY=your_nonce_key_here
AUTH_SALT=your_auth_salt_here
SECURE_AUTH_SALT=your_secure_auth_salt_here
LOGGED_IN_SALT=your_logged_in_salt_here
NONCE_SALT=your_nonce_salt_here

# Debugging
XDEBUG_ENABLE=true
XDEBUG_HOST=host.docker.internal
XDEBUG_PORT=9003
XDEBUG_IDEKEY=VSCODE
