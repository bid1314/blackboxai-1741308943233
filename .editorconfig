# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# PHP files
[*.php]
indent_style = space
indent_size = 4

# JavaScript files
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 4

# CSS files
[*.{css,scss,sass,less}]
indent_style = space
indent_size = 4

# HTML files
[*.{html,htm}]
indent_style = space
indent_size = 4

# JSON files
[*.{json,json5}]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

# Configuration files
[{package.json,composer.json,.travis.yml,.eslintrc,.prettierrc}]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2
end_of_line = lf

# Windows files
[*.bat]
end_of_line = crlf

# Minified files
[**.min.{js,css}]
indent_style = ignore
insert_final_newline = ignore
